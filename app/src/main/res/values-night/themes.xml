<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Presenti" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.graphic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="tint"> @color/white</item>
    </style>

    <style name="Theme.textColor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor"> @color/white</item>
    </style>

    <style name="Theme.textMarkPresence" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">#28fc03</item>
    </style>

    <style name="Theme.topGreenImage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:src">@drawable/top_green_for_dark_theme</item>
    </style>

    <style name="Theme.splashBelowTopGreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:src">@drawable/splash_image_for_dark_theme</item>
    </style>

</resources>